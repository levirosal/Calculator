pipeline {
    agent any

    stages {
        stage ('Compile Stage') {

            steps {
                sh 'javac -d class/model/ src/model/*.java'
                sh 'javac -d class/view/ src/view/*.java'
                sh 'javac -d class/controller/ src/controller/*.java'
            }
        }

        stage ('Create jar Stage') {

            steps {
                sh 'jar -cvmf class/manifest.txt Calculator.jar class/'
            }
        }


        stage ('Verify Stage') {
            steps {
                sh 'ls -lh class/"'
            }
        }
    }
}